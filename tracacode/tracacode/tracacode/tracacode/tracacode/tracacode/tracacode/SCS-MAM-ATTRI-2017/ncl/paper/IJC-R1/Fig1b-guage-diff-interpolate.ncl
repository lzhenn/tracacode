    res_sig@gsnRightString      = " "


  diff_var1=diff_var1/30
  plot_sh= gsn_csm_contour_map(wks,diff_var1,res) ; create a default plot

  ; sigmap
  plot_sig = gsn_csm_contour(wks,diff_var1_sig,res_sig)
  overlay(plot_sh,plot_sig)
  
  draw(plot_sh)
  frame(wks)


